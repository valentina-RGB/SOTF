                <option value="Chocolate">
                <option value="Fresa">
                <option value="Sandia">
                <option value="Vetado de caramelo">
              </datalist>
              <div class="valid-feedback">

              </div>
              <div class="invalid-feedback">
                El dado no es válido.
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="form-group" pattern="[a-zA-Z]">
              <label for=" exampleDataList" class="form-control-label">Adiciones</label>
              <input class="form-control " list="adicion" id="exampleDataList" placeholder="Adición">
              <datalist id="adicion">
                <option value="Barquillo">
                <option value="Fresa">
                <option value="Cereza">
                <option value="vaso">
                <option value="Queso">
              </datalist>
              <div class="valid-feedback">

              </div>
              <div class="invalid-feedback">
                El dado no es válido.
              </div>
            </div>
          </div>
          <div class="col-lg-2">
            <div class="form-group">
              <label class="form-control-label" for="input-username">Cantidad</label>
              <input type="number" class=" form-control" id="username" required min="1" max="10" placeholder="cantidad"
